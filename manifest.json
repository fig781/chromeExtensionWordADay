{
    "manifest_version": 2,
    "name": "Learnfluent",
    "version": "1.4",
    "description": "Get a daily word for the foreign language you are learning.",
    "author": "Aden Eilers",
    "permissions": ["storage"],
    "options_ui": {
      "page": "/Display/options.html",
      "oper_in_tab": false
    },
    "background": {
        "scripts": ["/Scripts/background.js"],
        "persistent": false
      },
    "browser_action": {
        "default_popup": "/Display/popup.html",
        "default_icon": {
            "16": "/Display/Resources/LearnfluentICON48pSquare.png",
            "32": "/Display/Resources/LearnfluentICON48pSquare.png",
            "48": "/Display/Resources/LearnfluentICON48pSquare.png",
            "128": "/Display/Resources/LearnfluentICON128pSquare.png"
            }
      },
    "icons": {
    "16": "/Display/Resources/LearnfluentICON48pSquare.png",
    "32": "/Display/Resources/LearnfluentICON48pSquare.png",
    "48": "/Display/Resources/LearnfluentICON48pSquare.png",
    "128": "/Display/Resources/LearnfluentICON128pSquare.png"
    }
  }