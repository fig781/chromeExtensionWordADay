{
    "manifest_version": 2,
    "name": "Word A Day: Foreign Language Learning Tool",
    "version": "0.1",
    "description": "Learn french words",
    "author": "Aden Eilers",
    "permissions": ["alarms","storage","tabs"],
    "options_ui": {
      "page": "options.html",
      "oper_in_tab": false
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "france-16.png",
            "32": "france-28.png",
            "48": "france-48.png",
            "128": "france-96.png"
            }
      },
    "icons": {
    "16": "france-16.png",
    "32": "france-28.png",
    "48": "france-48.png",
    "128": "france-96.png"
    }
  }